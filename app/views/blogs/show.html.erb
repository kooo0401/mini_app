<div class="row">
  <div class="col s6 offset-s3">
    <div class="card pink lighten-4">
      <% if user_signed_in? && current_user.id == @blog.user_id %>
        <div class="more">
          <ul class="more_list">
            <%= simple_format(@blog.text) %>
          </ul>
            <a class="waves-effect waves-teal btn-flat"><%= button_to 'Delete', "/blogs/#{@blog.id}", method: :delete %></a>
        </div>
      <% end %>
    </div>
  </div>
</div>

